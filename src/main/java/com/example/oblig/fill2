package com.example.oblig;

import javafx.application.Application;
import javafx.event.EventHandler;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.input.KeyCode;
import javafx.scene.input.KeyEvent;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.HBox;
import javafx.scene.layout.Pane;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.scene.shape.Circle;
import javafx.scene.shape.Rectangle;
import javafx.scene.text.Font;
import javafx.stage.Stage;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStream;

import static javafx.scene.paint.Color.BLACK;


public class Main extends Application {

    //Score info
    Label currentScoreLabel, highScoreLabel;
    int currentScore, highScore;
    Sound music = new Sound();
    Sound se = new Sound();

    //SCREEN SETTINGS
    public final int screenWidth = 800;
    public final int screenHeight = 900;
    public void start(Stage primaryStage) throws IOException {
        Pane pane = new Pane();
        pane.setStyle("-fx-background-color : black");
        //PACMAN
        Circle pacman = new Circle(50,50,15);
        pacman.setFill(Color.YELLOW);
        //RED
        Rectangle red = new Rectangle(100,400,20,20);
        red.setFill(Color.RED);
        //BLUE
        Rectangle blue = new Rectangle(400,300,20,20);
        blue.setFill(Color.BLUE);
        //PINK
        Rectangle pink = new Rectangle(200,200,20,20);
        pink.setFill(Color.PINK);
        //ORANGE
        Rectangle orange = new Rectangle(300,100,20,20);
        orange.setFill(Color.ORANGE);

        pane.getChildren().addAll(pacman,red,blue,pink,orange);


        primaryStage.setResizable(false);
        primaryStage.setTitle("PacMan 2022");

        Scene scene = new Scene(pane, screenWidth, screenHeight);
        primaryStage.setScene(scene);
        primaryStage.show();

////////////////////////////////////////
        scene.setOnKeyPressed(new EventHandler<KeyEvent>(){
            @Override
            public void handle(KeyEvent event){

                if (event.getCode() == KeyCode.RIGHT) {
                    pacman.setLayoutX(pacman.getLayoutX() + 5);
                } else if (event.getCode() == KeyCode.LEFT) {
                    pacman.setLayoutX(pacman.getLayoutX() - 5);
                }
                  else if (event.getCode() == KeyCode.DOWN) {
                    pacman.setLayoutY(pacman.getLayoutY() + 5);
                }
                  else if (event.getCode() == KeyCode.UP) {
                    pacman.setLayoutY(pacman.getLayoutY() - 5);
                }
            }
        });
}

}